# Based on: https://github.com/fly-apps/redis/blob/main/fly.toml

app = "myorg-redis"

kill_signal = "SIGINT"
kill_timeout = 5
processes = []

[[mounts]]
  destination = "/data"
  source = "myorg_redis_server"

[metrics]
  port = 9091
  path = "/metrics"

[build]
  image = "flyio/redis:6.2.6"

[env]

[experimental]
  allowed_public_ports = []
  auto_rollback = true

